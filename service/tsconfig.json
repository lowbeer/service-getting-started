{
  "compilerOptions": {
    "types": [
      "bluebird-global",
      "node"
    ],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016"
    ],
    "outDir": "dist",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "./typings.d.ts",
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
